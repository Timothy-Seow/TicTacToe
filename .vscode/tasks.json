{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-game",
            "type": "shell",
            "command": "gcc",
            "args": [
                "tic_tac_toe.c",
                "minimax_improved.c",
                "ui.c",
                "-o",
                "game.exe",

                "-I\"C:/msys64/mingw64/include\"",
                "-L\"C:/msys64/mingw64/lib\"",

                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
